# invert horizontal scrolling
synclient HorizScrollDelta=-79
synclient VertScrollDelta=-79
#synclient CircularScrolling=1

# set sensitivity
synclient MinSpeed=2.5
synclient MaxSpeed=18
synclient AccelFactor=0.0875
synclient CoastingSpeed=0
#synclient CoastingSpeed=1.4
#synclient CoastingFriction=20

# remove annoyances
synclient HorizHysteresis=0
synclient VertHysteresis=0

# disable tap while typing
sigterm syndaemon &>/dev/null
syndaemon -d -t -i 0.5

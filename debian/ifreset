#!/bin/bash

if [[ -z $@ || $@ == "-h" || $@ == "--help" ]]; then
	echo -e "Resets and spoofs interface.\n  Usage: ifreset <interface>"
else
	echo "Resetting & spoofing $@ ..."

	# reset
	iw dev $@ del
	iw phy phy0 interface add $@ type managed
	rfkill unblock wifi

	# spoof
	macchanger -rb $@ &> /dev/null
	ifconfig $@ up

	# check
	macchanger $@
fi
